import java.util.Scanner;

public class DesafioQuadrados {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);

       
        System.out.print("Informe um número inteiro para ver a tabela de quadrados (Ex: 5): ");
        int limite = scanner.nextInt();

        System.out.println("--- Tabela de Quadrados de 1 até " + limite + " ---");

        
        for (int i = 1; i <= limite; i++) {
           
            int quadrado = i * i;
            
            System.out.println(i + "² = " + quadrado);
        }

        
        scanner.close();
    }
}
