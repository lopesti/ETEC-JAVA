import java.util.Scanner;

public class AtividadeValidacaoSenha {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        
        final int SENHA_CORRETA = 1234;
        int senhaDigitada;

        System.out.println("--- Sistema de Login ---");

        
         {
            System.out.print("Por favor, digite a senha num√©rica: ");
            senhaDigitada = scanner.nextInt();

           
            if (senhaDigitada != SENHA_CORRETA) {
                System.out.println("Senha incorreta. Tente novamente.");
            }

        } while (senhaDigitada != SENHA_CORRETA); 

        
        System.out.println("\nAcesso concedido! Bem-vindo(a).");
        
        scanner.close();
    }
}
